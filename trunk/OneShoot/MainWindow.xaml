<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="OneShoot.MainWindow"
	x:Name="Window"
	Title="Window"
	Width="350" Height="550" WindowStyle="None" WindowStartupLocation="CenterScreen" MinWidth="350" MinHeight="100" AllowsTransparency="True" xmlns:OneShoot="clr-namespace:OneShoot" Icon="Resource\OneShoot.ico">

	<Grid x:Name="LayoutRoot">
		<DockPanel Width="Auto" Height="Auto">
			<UniformGrid Height="Auto" Rows="1" Width="Auto" DockPanel.Dock="Bottom">
				<Button Width="Auto" Height="Auto">
					<Image HorizontalAlignment="Center" VerticalAlignment="Center" Width="Auto" Height="Auto" Source="Resource\Tweets.ico" Stretch="None"/>
				</Button>
				<Button Width="Auto" Height="Auto">
					<Image HorizontalAlignment="Center" VerticalAlignment="Center" Width="Auto" Height="Auto" Source="Resource\Mentions.ico" Stretch="None"/>
				</Button>
				<Button Width="Auto" Height="Auto">
					<Image HorizontalAlignment="Center" VerticalAlignment="Center" Width="Auto" Height="Auto" Source="Resource\Messages.ico" Stretch="None"/>
				</Button>
				<Button>
					<Image Width="48" Height="48" Source="Resource\Favorites.ico" Stretch="Fill"/>
				</Button>
			</UniformGrid>
			<OneShoot:TweetControl Width="Auto" Height="Auto" DockPanel.Dock="Bottom"/>
		</DockPanel>
		<OneShoot:AccountControl HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Hidden"/>
	</Grid>
</Window>